                    text:  "El correo y razón social son obligatorios.",
                    type: "warning"
                })
             
            } else {
                var arrJson = new Array();

                $('.option').each(function (i, obj) {
                    if ($(this).hasClass('selected')) {
                        arrJson[i] = '1';
                    } else {
                        arrJson[i] = '0';
                    }
                });

                var Email = $("#Email_text").val();
                var Empresa = $("#Empresa_text").val();

                var jsonData = JSON.stringify(arrJson);

            $.ajax({
                url: '@Url.Action("checklist_js")',
                data: { Q1: arrJson[0], Q2: arrJson[1], Q3: arrJson[2], Q4: arrJson[3], Q5: arrJson[4], Q6: arrJson[5], Q7: arrJson[6], Q8: arrJson[7], Q9: arrJson[8], Q10: arrJson[9], Email: Email, Empresa:Empresa },
