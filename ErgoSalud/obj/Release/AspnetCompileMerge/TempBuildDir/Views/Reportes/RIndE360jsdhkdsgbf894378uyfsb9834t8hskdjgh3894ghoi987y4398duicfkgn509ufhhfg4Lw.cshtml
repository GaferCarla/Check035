<script type="text/javascript">

    $(window).load(function () {
            var ctx = document.getElementById("myChart");
            var myChart = new Chart(ctx, {
                type: 'bar',
            data: {
                labels: ["I", "II", "III", "IV", "V", "VI", "VII", "VIII", "IX", "X", "XI", "XII", "XIII", "XIV", "XV"],
                datasets: [{
                label: 'Categorías',
                    data: [@ViewBag.Final_Empresa.C_I, @ViewBag.Final_Empresa.C_II, @ViewBag.Final_Empresa.C_III, @ViewBag.Final_Empresa.C_IV ,
                        @ViewBag.Final_Empresa.C_V , @ViewBag.Final_Empresa.C_VI, @ViewBag.Final_Empresa.C_VII , @ViewBag.Final_Empresa.C_VIII , @ViewBag.Final_Empresa.C_IX,
