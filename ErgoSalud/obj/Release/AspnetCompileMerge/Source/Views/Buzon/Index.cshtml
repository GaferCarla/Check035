<div class="container p-5 row justify-content-center">

    <h2 class="title_blue ps-0 ps-sm-5 ms-0 ms-sm-5 text-sm-start text-center">Registros denuncias y sugerencias</h2>

    <p class="pe-0 pe-sm-5 me-0 me-sm-5">
        @Html.ActionLink("Alta Sugerencia - Denuncia", "Create", null, new { @class = "px-4 py-3 btn btn-module text-uppercase me-5  mb-5 mt-3 float-sm-end mx-auto float-none" })
    </p>

    <div class="col-11 col-sm-10 mx-auto">
        <table id="example" class="table table-hover responsive nowrap">
            <thead>
                <tr>
                    @*<th>
                @Html.DisplayName("Tipo denuncia")
            </th>*@

                    <th>
                        @Html.DisplayName("Sugerencia Categoría")
                    </th>
                    <th>
                        @Html.DisplayName("Sugerencia Descripción")
                    </th>
                    <th>
                        @Html.DisplayName("Denuncia Relacionada")
                    </th>
                    <th>
                        @Html.DisplayName("Denuncia Involucrados")
                    </th>
                    <th>
                        @Html.DisplayName("Denuncia Hechos")
                    </th>
                    <th>
                        @Html.DisplayName("Denuncia Frecuencia")
                    </th>
                    <th>
                        @Html.DisplayName("Denuncia Soy")
                    </th>


                    <th>Acciones</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        @*<td>
                    @if (item.tipo != null)
                    {@Html.DisplayFor(modelItem => item.tipo)}
                else
                {<b>N/A</b>}
                </td>*@
                        <td>
                            @if (item.cat_sugerencia != null)
                            {
                                @Html.DisplayFor(modelItem => item.cat_sugerencia)
                            }
                            else
                            {
                                <b>N/A</b>
                            }
                        </td>
                        <td>
                            @if (item.cat_sugerencia_desc != null)
                            {
                                @Html.DisplayFor(modelItem => item.cat_sugerencia_desc)
                            }
                            else
                            {
                                <b>N/A</b>
                            }
                        </td>
                        <td>
                            @if (item.denuncia_relacionada != null)
                            {
                                @Html.DisplayFor(modelItem => item.denuncia_relacionada)
                            }
                            else
                            {
                                <b>N/A</b>
                            }
                        </td>
                        <td>

                            @if (item.denuncia_involucrados != null)
                            {
                                @Html.DisplayFor(modelItem => item.denuncia_involucrados)
                            }
                            else
                            {
                                <b>N/A</b>
                            }

                        </td>
                        <td>

                            @if (item.denuncia_hechos_desc != null)
                            {
                                @Html.DisplayFor(modelItem => item.denuncia_hechos_desc)
                            }
                            else
                            {
                                <b>N/A</b>
                            }

                        </td>
                        <td>

                            @if (item.denuncia_frecuencia != null)
                            {
                                @Html.DisplayFor(modelItem => item.denuncia_frecuencia)
                            }
                            else
                            {
                                <b>N/A</b>
                            }

                        </td>
                        <td>

                            @if (item.denuncia_soy != null)
                            {
                                @Html.DisplayFor(modelItem => item.denuncia_soy)
                            }
                            else
                            {
                                <b>N/A</b>
                            }

                        </td>

                        <td>

                            <a href="@Url.Action("Delete", new { id=item.id })">
                                <i class="fa fa-trash-o" title="Eliminar" style="font-size:23px;color:rebeccapurple"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>

    </div>

</div>

@section dataTableScripts {

    <script src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js'></script>
    <script src="~/lib/datatables.net/jquery.dataTables.min.js"></script>
    <script src='https://cdn.datatables.net/responsive/2.2.3/js/dataTables.responsive.min.js'></script>
    <script src="~/lib/datatables.net-bs/dataTables.bootstrap.min.js"></script>
    <script src="~/lib/datatables.net-select-bs/select.bootstrap.min.js"></script>
    <script src="https://cdn.datatables.net/plug-ins/1.11.5/i18n/es-ES.json"></script>

}



<script>
    $(document).ready(function () {
        $("#example").DataTable({
            "language": {
                "url": "//cdn.datatables.net/plug-ins/1.10.16/i18n/Spanish.json"
            },

            aaSorting: [],
            responsive: true,

            columnDefs: [
                {
                    responsivePriority: 1,
                    targets: 0
                },
                {
                    responsivePriority: 2,
                    targets: -1
                }
            ]
        });

        $(".dataTables_filter input")
            .attr("placeholder", "Search here...")
            .css({
                width: "300px",
                display: "inline-block"
            });

        $('[data-toggle="tooltip"]').tooltip();
    });
</script>