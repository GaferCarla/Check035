
<script>
        function Adding_Subordinado() {
        var id_CT = $('#ddw_Evaluador option:selected').val(); 
        var id_CT_Evaluado = $('#ddw_Evaluado option:selected').val(); 
        $.ajax({
            type: 'POST',
            url: '@Url.Action("Insert_subordinado", "Home")',
            dataType: 'json',
            data: { id_CT: id_CT,id_CT_Evaluado:id_CT_Evaluado },
            success: function (data) { 
                if (data != null) {
                    $('#ddw_Evaluador').empty();
                    $('#ddw_Evaluado').empty(); 
                  window.location.reload();
                } else {
                alert("else");
                }
            },
            error: function () {
                alert("Seleccione la Empresa"); 
            },
            catch(e) {
                alert(e.name + "\n" + e.message)
            }
        });
    }

</script>

