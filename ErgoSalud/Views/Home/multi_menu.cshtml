<script>
    function calculo_muestra() {
        var No_empleados = parseInt($("#No_empleados").val());
        var Final_muestra = ((0.9604 * No_empleados) / (0.0025 * (No_empleados - 1) + 0.9604)).toFixed(2);
        // var Final_muestra =  No_empleados + 1 ;

        //alert("Muestra a Evaluar: " + Final_muestra.toFixed(2));
        if (No_empleados > 0) {
            swal.fire({
                title: "Muestra a Evaluar: " + Final_muestra,
                text: "Muestra Calculada en base a " + No_empleados + " Empleados",
                type: "success"
            });

        } else {
            swal.fire({
                title: "Ingrese un número valido",
                type: "error"
            });
        }
    }
</script>
