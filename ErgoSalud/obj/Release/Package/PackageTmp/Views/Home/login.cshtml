@model ErgoSalud.Models.ERGOS_Usuarios_N01
@{
    ViewBag.Title = "INICIO DE SESION";
}


<style>


    body {
        background: #eee !important;
        font-family: Ebrima;
    }

    .wrapper {
        margin-top: 60px;
        margin-bottom: 60px;
    }

    .form-signin {
        max-width: 380px;
        padding: 15px 35px 45px;
        margin: 0 auto;
        background-color: #fff;
        border: 1px solid rgba(0,0,0,0.1);
        .form-signin-heading, .checkbox

    {
        margin-bottom: 30px;
    }

    .checkbox {
        font-weight: normal;
    }

    .form-control {
        position: relative;
        font-size: 16px;
        height: auto;
        padding: 10px;
        &:focus

    {
        z-index: 2;
    }

    }

    input[type="text"] {
        margin-bottom: -1px;
        border-bottom-left-radius: 0;
        border-bottom-right-radius: 0;
    }

    input[type="password"] {
        margin-bottom: 20px;
        border-top-left-radius: 0;
        border-top-right-radius: 0;
    }
    }
</style>
<div class="wrapper">
    <div class="form-signin">
        <div style="margin-top:50px;margin-bottom:20px" align="center" class="row">
            <img src="~/images/Customer_Logo.png" class="img-responsive" style=";padding-top:15px;padding-left:15px;padding-right:15px">
        </div>
        @*<h3 align="center" class="">Plataforma Multi Evalúa</h3>*@
        <div class="row">

            @Html.ValidationMessageFor(m => m.User_Nombre, "", new { @class = "text-danger" })
            @Html.ValidationMessageFor(m => m.User_Password, "", new { @class = "text-danger" })
            @if (TempData["LOGIN"] != null)
            {
                <div class="alert-danger col-xs-12"> @TempData["LOGIN"]<br></div>

            }
            <div class="col-xs-12 ">
                <br><section id="loginForm">

                    @using (Html.BeginForm("Login", "Home", new { returnUrl = Request.QueryString["ReturnUrl"] }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @*<div class="alert-danger">
                            <span class="input-group-addon">
                               Plataforma en mantenimiento disculpe las molestias
                            </span> 
                        </div>*@
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="material-icons">person</i>
                            </span>
                            <div class="form-line">
                                @Html.TextBoxFor(m => m.User_Nombre, new { @class = "form-control form-line focused", autocomplete = "off", placeholder = "Nombre de Usuario", required = "", autofocus = "" })
                            </div>
                        </div>
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="material-icons">lock</i>
                            </span>
                            <div class="form-line">
                                @Html.PasswordFor(m => m.User_Password, new { @class = "form-control form-line focused", autocomplete = "off", placeholder = "Contraseña", required = "", autofocus = "" })
                            </div>
                        </div>
                        <div align="center" class="form-group">
                            <div class="col-xs-12">
                                <input type="submit" value="Iniciar sesión" class="btn btn-primary" />
                            </div>
                        </div>
                    @*<b>Plataforma en mantenimiento</b>*@
                    <p style="text-align:center;padding-top:25px"> 
                        <span>Para una óptima visualización se recomienda usar <strong>Google Chrome</strong>.</span>
                    </p>
                    }<br>
                </section>

            </div>
            @*<div class="col-md-4">
                    <section id="socialLoginForm">
                        @Html.Partial("_ExternalLoginsListPartial", new ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })
                    </section>
                </div>*@
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/New_View")
}
